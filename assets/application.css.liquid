body, html {
   font-family: "Lato", serif;
   font-size: 16px;
}
img {
   max-width: 100%;
}
.top-bar {
   border-bottom: 1px solid #e5e5e5;
   padding: 10px 0;
}
.top-bar * {
   color: #959595;
   text-decoration: none;
   font-size: 14px;
}
.user-menu {
   display: flex;
   align-items: center;
   flex-direction: row;
   gap: 40px;
}
.main-header {
   align-items: center;
   padding-top: calc(var(--bs-gutter-x) * .5);
   padding-bottom: calc(var(--bs-gutter-x) * .5);
}
#nav {
   display: flex;
   justify-content: center;
   align-content: center;
}
.mainmenu #nav li {
   list-style: none;
   margin: 0;
}
.mainmenu #nav li a {
   padding: 10px 15px;
   color: #000000;
   text-decoration: none;
   font-weight: 400;
   text-transform: uppercase;
}
.mainmenu #nav li.has_submenu {
   position: relative;
}
.mainmenu #nav .submenu {
   background: #e5e5e5;
   margin: 0;
   padding: 10px 15px;
   width: 100%;
   min-width: 200px;
   max-width: 300px;
   border: 1px solid #e5e5e5;
   display: flex;
   flex-direction: column;
   gap: 5px;
   line-height: 1.3;
   position: absolute;
   left: 0;
   top: 30px;
   visibility: hidden;
   opacity: 0;
}
.mainmenu #nav .submenu li a {
   padding: 0;
}
.mainmenu #nav li a:hover + .submenu {
   visibility: visible;
   opacity: 1;
}
.text-right {
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: end;
   gap: 30px;
}
a.cart-icon {
   color: #000000;
   text-decoration: none;
   position: relative;
}
span.cart-count {
   width: 18px;
   height: 18px;
   display: flex;
   position: absolute;
   background: #cf2226;
   color: #fff;
   align-items: center;
   justify-content: center;
   border-radius: 100%;
   font-size: 11px;
   top: -7px;
   right: -7px;
}