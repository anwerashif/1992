<header id="site-header" class="site-header">
    <div class="container">
        <div class="row top-bar">
            <div class="col">
                <i class="fa fa-star"></i> Welcome to 1992 Online Shop! Let's start to shopping NOW!!!
            </div>
            <div class="col col-auto user-menu">
                <a href="">Sign In</a>
                <a href="">Login</a>
            </div>
        </div>
        <div class="row main-header">
            <div class="col-lg-2">
                <div class="logo">
                    <a href="{{ routes.root_url }}" class="site-logo">
                        {% if section.settings.logo %}
                            <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}">
                        {% else %}
                        <h2>{{ shop.name }}</h2>
                        {% endif %}
                    </a>
                </div>
            </div>
            <div class="col">
                <div class="mainmenu">
                    <div id="nav">
                        {% for link in linklists.main-menu.links %}
                            {% assign child_list_handle = link.title | handleize %}
                            {% if linklists[child_list_handle].links != blank %}
                                <li class="has_submenu">
                                    <a href="{{ link.url }}">{{ link.title }}</a>
                                    <ul class="submenu">{% for childlink in linklists[child_list_handle].links %}
                                        <li><a href="{{ childlink.url }}">{{ childlink.title | escape }}</a></li>
                                    {% endfor %}</ul>
                                </li>
                            {% else %}
                                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="col-lg-2 text-right">
                <span class="search-tigger"><i class="fa fa-search"></i></span>
                <a href="/cart" class="cart-icon"><i class="fa fa-shopping-cart"></i><span class="cart-count">{{ cart.item_count }}</span></a>
            </div>
        </div>
    </div>
</header>

{% schema %}
{
    "name": {
        "en": "Header"
    },
    "settings": [
        {
            "type": "image_picker",
            "id": "logo",
            "label": {
                "en": "Upload Logo"
            }
        }
    ]
}
{% endschema %}